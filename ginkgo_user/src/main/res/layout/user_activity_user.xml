<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.molmc.ginkgo.basic.views.TitleView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showConfirmButton="false"
        app:titleText="用户" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_div_horizontal"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/basic_gray8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/basic_d15">

        <com.molmc.ginkgo.basic.views.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/basic_d60"
            android:layout_height="@dimen/basic_d60"
            android:src="@mipmap/basic_ic_head_single"
            app:civ_border_color="@color/basic_black6"
            app:civ_border_width="@dimen/basic_d0_5" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/basic_d15"
            android:layout_marginEnd="@dimen/basic_d10"
            android:layout_marginStart="@dimen/basic_d15"
            android:layout_marginTop="@dimen/basic_d15"
            android:textColor="@color/basic_blue1"
            android:textSize="@dimen/basic_s21"
            tools:text="汪文斌" />

        <TextView
            android:id="@+id/tv_role_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/basic_white1"
            android:textSize="@dimen/basic_s21"
            tools:text="(站长)" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_div_horizontal"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/rl_check_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_selector_common"
        android:padding="@dimen/basic_d15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/btn_check_update"
            android:textColor="@color/basic_white1"
            android:textSize="@dimen/basic_s21"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="@dimen/basic_d20"
            android:layout_height="@dimen/basic_d20"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/basic_ic_arrow_right"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_div_horizontal"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_selector_common"
        android:gravity="center"
        android:padding="@dimen/basic_d15"
        android:text="@string/btn_logout"
        android:textColor="@color/basic_yellow2"
        android:textSize="@dimen/basic_s21" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_div_horizontal"
        tools:ignore="ContentDescription" />
</LinearLayout>