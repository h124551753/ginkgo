<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_search_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/basic_d30"
        android:layout_margin="@dimen/basic_d5"
        android:adjustViewBounds="true"
        android:background="@drawable/basic_bg_round_rect_black"
        android:hint="@string/hint_search"
        android:paddingEnd="@dimen/basic_d15"
        android:paddingStart="@dimen/basic_d44"
        android:singleLine="true"
        android:textColor="@color/basic_white1"
        android:textColorHint="@color/basic_gray4"
        android:textSize="@dimen/basic_s16"
        tools:ignore="TextFields" />

    <ImageView
        android:layout_width="@dimen/basic_d24"
        android:layout_height="@dimen/basic_d24"
        android:layout_alignStart="@id/et_search"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/basic_d15"
        android:src="@mipmap/basic_ic_search"
        tools:ignore="ContentDescription" />
</RelativeLayout>