<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/basic_bg_toast"
    android:paddingBottom="@dimen/basic_d10"
    android:paddingLeft="@dimen/basic_d30"
    android:paddingRight="@dimen/basic_d30"
    android:paddingTop="@dimen/basic_d10" >

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="@dimen/basic_d40"
        android:layout_height="@dimen/basic_d40"
        android:layout_marginBottom="@dimen/basic_d10"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/basic_white1"
        android:textSize="@dimen/basic_s16" />

</RelativeLayout>